@model NeSHOP.Models.TblUserprevModel


@{
    ViewData["Title"] = "User Access Permission";
}

@section Scripts{
<script type="text/javascript">

    $(function () {
        $("#Userid").focus();
        $("#Userid").change(function () {
              $("#btn[value=Search]").focus();            
            return false;
        });

        $("#btn[value=Save]").click(function (event) {
            var btnValue = $("#btn[value=Save]").val(); // "Save";
            answer = confirm("Are You Cofirme to " + btnValue + " This Operation.....?");
            if (answer != "0") {

                return true;
            }
            else return false;

        });

        $("#btn[value=Search]").click(function (event) {
            var btnValue = $("#btn[value=Search]").val(); // "Search";
            answer = confirm("Are You Cofirme to " + btnValue + " This Operation.....?");
            if (answer != "0") {
                return true;
            }
            else return false;

        });

        $("#btn[value=Clear]").click(function (event) {
            var btnValue = $("#btn[value=Clear]").val(); // "Clear";
            answer = confirm("Are You Cofirme to " + btnValue + " This Operation.....?");
            if (answer != "0") {
                return true;
            }
            else return false;

        });

        $("#btn[value=Exit]").click(function (event) {
            var btnValue = $("#btn[value=Exit]").val(); // "Exit";
            answer = confirm("Are You Cofirme to " + btnValue + " This Operation.....?");
            if (answer != "0") {
                return true;
            }
            else return false;

        });

            if ($("#SuccessStat").val() == "1") {
                $.alert("Stockin Successfull...!!", { withTime: true, type: 'success', title: 'Success:', icon: 'glyphicon glyphicon-heart', minTop: 100 });
            }
            else if ($("#SuccessStat").val() == "2") {
                $.alert("Stockin Fail...!!", { withTime: true, type: 'warning', title: 'Fail:', icon: 'glyphicon glyphicon-heart', minTop: 100 });
            }
            else if ($("#SuccessStat").val() == "3") {
                $.alert("Stockin Data Exception...!!", { withTime: true, type: 'info', title: 'Info:', icon: 'glyphicon glyphicon-heart', minTop: 100 });
            }

    });
</script> 
}


<form action="/Admin/userpermission" method="post"> 
    <div class="row container padding-top padding-bottom" style="width:95%">
        <div class="panel panel-responsive bg-gray-light  mt-1 pb-2 rounded-2">
            <div class="panel-heading bg-navy-active p-2 mt-0 rounded-2 text-center">
                <h4>User Access Permission</h4> 
            </div>
            <div class="panel-body">
                        <div class="row p-1 mt-3 mb-1">
                            <div class="col-md-4"><label asp-for="Userid" class="control-label"></label></div>
                            <div class="col-md-8">
                                    <select asp-for="Userid" class="form-select form-select-lg w-100" asp-items="@(new SelectList(Model.UserList, "Value", "Text"))"> </select>
                                    <input type="hidden" id="SuccessStat" value="@ViewData["SuccessStat"]" />
                            </div>
                        </div> 
                        <hr/>                        
                        <div class="row mt-3 m-3 mb-2">
                            <table id="formTable" style="width: 100%; table-layout:auto; ">
                            <tr style=" background-color:#99DAF9;">
                                <td>
                                    Role          
                                </td>
                                <td>
                                    Active
                                </td>
                                </tr> 
                                @for (var i = 0; i < Model.RoleModelList.Count; i++)
                                    {
                                    <tr>
                                    
                                    <td>
                                        <div class="editor-field">
                                            @(Html.DisplayFor(m => m.RoleModelList[i].Roledesc))
                                            @(Html.HiddenFor(m => m.RoleModelList[i].Rolecode))
                                        </div>
                                    </td>
                                    <td>
                                    <div class="editor-field">
                                            @(Html.CheckBoxFor(m => m.RoleModelList[i].IsActive))
                                            </div>
                                    </td>
                                    </tr>         
                                    }
                            </table>
                        <div class="row mb-2">
                            <div class="col-4"></div>
                            <div class="col-6 btn-group p-3" role="group">
                                <button type="submit" class="btn btn-primary btn-sm" id="btn" name="btn" value="Save">Save</button>
                                <button type="submit" class="btn btn-warning btn-sm" id="btn" name="btn" value="Search">Search</button>
                                <button type="submit" class="btn btn-info btn-sm" id="btn" name="btn" value="Clear">Clear</button>
                                <button type="submit" class="btn btn-danger btn-sm" id="btn" name="btn" value="Exit">Exit</button>
                            </div>
                        </div>
                </div> 

            </div>
        </div>
    </div>
</form>


